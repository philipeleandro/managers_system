<% content_for(:title) do %>
  <%= 'Lista de usuários' %>
<% end %>

<header class="main-content__header">
  <h1 class="main-content__page-title" id="page-title">
    <%= content_for(:title) %>
  </h1>

  <% if show_search_bar %>
    <%= render(
      "search",
      search_term: search_term,
      resource_name:'Usuário'
    ) %>
  <% end %>

  <%= button_to t('devise.sessions.sign_out'), destroy_user_session_path, method: :delete, class: 'button logout' %>
</header>
