<section class="main-container">
  <div class="container-alerts">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
        <div class="card border border-light-subtle rounded-4">
          <div class="card-body p-3 p-md-4 p-xl-5">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <h5 class="text-center mb-4"><%= t('message.forgot_password') %></h5>
              <div class="row gy-3 overflow-hidden">
                <div class="col-12">
                  <div class="form-floating">
                    <%= f.email_field :email, class: "form-control", id: "email", autofocus: true, placeholder: 'Email', autocomplete: "email", required: true %>
                    <% if resource.errors.any? %>
                      <% f.label :email,  class: "form-label" %><br />
                    <% else %>
                      <%= f.label :email,  class: "form-label" %><br />
                    <% end %>
                  </div>
                </div>
                <div class="col-12">
                  <div class="d-grid">
                    <%= f.submit t('message.send_email'), class: "btn btn-primary btn-lg" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-4">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
