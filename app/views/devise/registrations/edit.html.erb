<section class="main-container">
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
        <div class="card border border-light-subtle rounded-4">
          <div class="card-body p-3 p-md-4 p-xl-5">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <h5 class="text-center mb-4">Atualizar cadastro</h5>
              <div class="row gy-3 overflow-hidden">
                <div class="col-12">
                  <div class="form-floating">
                    <%= f.email_field :email, class: "form-control", id: "email", autofocus: true, placeholder: '', autocomplete: "email", required: true %>
                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                      <em>(Currently waiting confirmation for: <%= resource.unconfirmed_email %>)</em>
                    <% end %>
                    <%= f.label :email,  class: "form-label" %><br />
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-floating">
                    <%= f.password_field :password, autocomplete: "new-password", placeholder: '', class:"form-control", id:"password" %>
                    <em>(<%= t('messages.blank_if_dont_want_update') %>)</em>
                    <%= f.label t('field.new_password'),  class: "form-label" %><br />
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-floating">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '', class:"form-control", id:"password" %>
                    <%= f.label t('field.confirm_password'),  class: "form-label" %><br />
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-floating">
                    <%= f.password_field :current_password, autocomplete: "current-password", placeholder: '', class:"form-control", id:"password" %>
                    <em>(<%= t('messages.to_finish') %>)</em>
                    <%= f.label :current_password,  class: "form-label" %><br />
                  </div>
                </div>
                <div class="col-12">
                  <div class="d-grid">
                    <%= f.submit t('field.update'), class: "btn btn-primary btn-lg" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-4">
          <%= link_to "Voltar", :back, class: "link-secondary text-decoration-none" %>
        </div>
      </div>
    </div>
  </div>
</section>
